---
export interface Props {
  variant?: 'primary' | 'secondary' | 'light';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  class?: string;
}

const { variant = 'primary', href, type = 'button', disabled = false, class: className = '' } = Astro.props;
const baseClasses = 'inline-flex items-center justify-center px-4 py-2 text-sm font-medium rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2';
const variantClasses = {
  primary: 'bg-primary text-white hover:bg-primary/90 focus:ring-primary',
  secondary: 'bg-secondary text-white hover:bg-secondary/90 focus:ring-secondary',
  light: 'bg-white text-primary hover:bg-gray-100 focus:ring-primary',
};
const classes = `${baseClasses} ${variantClasses[variant]} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} disabled={disabled} class={classes}>
    <slot />
  </button>
)}