---

export interface Props {
  variant?: string;
  class?: string;
}

const { variant = 'default', class: className = '' } = Astro.props;

const baseClasses = 'rounded-lg border border-gray-200 bg-white shadow-sm p-6';

const variantClasses = {
  default: '',
};

const classes = `${baseClasses} ${variantClasses[variant] || variantClasses.default} ${className}`;

---

<div class={classes}>
  <slot />
</div>