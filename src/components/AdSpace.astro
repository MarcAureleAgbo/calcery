---
export interface Props {
  label?: string;
  placeholder?: string;
  enabled?: boolean;
  code?: string;
}

const {
  label = 'Publicit√©',
  placeholder = 'Espace publicitaire Google AdSense',
  enabled = false,
  code = '',
} = Astro.props;
---

{enabled && (
  <div class="ad-space">
    <div class="ad-label">{label}</div>
    {code ? <Fragment set:html={code} /> : <div class="ad-placeholder">{placeholder}</div>}
  </div>
)}
