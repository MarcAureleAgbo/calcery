---
import CalculatorLayout from '../../layouts/CalculatorLayout.astro';
import CompoundInterestCalculator from '../../components/calculators/CompoundInterestCalculator.tsx';
import type { BreadcrumbItem, FAQItem } from '../../lib/types.ts';

const breadcrumbs: BreadcrumbItem[] = [
  { name: "Accueil", item: "/" },
  { name: "Calculateurs", item: "/calculateurs" },
  { name: "Intérêts composés", item: "/calculateurs/interets-composes" }
];

const faqs: FAQItem[] = [
  { question: "Qu'est-ce que l'intérêt composé ?", answer: "L'intérêt composé est le intérêt gagné non seulement sur le capital initial, mais aussi sur les intérêts accumulés précédemment. Cela crée un effet boule de neige." },
  { question: "Comment ça diffère des intérêts simples ?", answer: "Avec des intérêts simples, on gagne seulement sur le capital initial. Avec les intérêts composés, on gagne sur le total (capital + intérêts), ce qui accélère la croissance." },
  { question: "Quelle fréquence de capitalisation choisir ?", answer: "Plus la fréquence est élevée (quotidienne vs annuelle), plus vous gagnez. Les comptes épargne utilisent souvent une capitalisation mensuelle ou quotidienne." },
  { question: "Combien de temps pour doubler mon argent ?", answer: "Utilisez la 'règle de 72': divisez 72 par le taux annuel. À 6%, il faut environ 12 ans pour doubler (72÷6=12)." },
  { question: "Quels placements offrent les meilleurs taux ?", answer: "Les actions historiquement (~8-10%), obligations (~3-5%), livrets (~3-4%), crypto (~variable). Consulter un professionnel pour votre profil." },
];

const tips = [
  "Plus tôt vous commencez à épargner, plus l'effet composé joue en votre faveur.",
  "Même de petites économies à taux élevé peuvent devenir significatives sur 20+ ans.",
  "Cherchez les meilleurs taux : livrets A, assurance-vie, placements bien gérés.",
  "L'inflation ronge votre capital : un taux de 2% quand l'inflation est 3% = perte réelle.",
  "Diversifiez vos investissements pour un rendement stable et sécurisé.",
];
---

<CalculatorLayout 
  title="Calculateur intérêts composés gratuit | Calcery" 
  description="Simulez la croissance exponentielle de votre épargne avec les intérêts composés. Visualisez comment votre argent se multiplie au fil du temps."
  breadcrumbs={breadcrumbs} 
  faqs={faqs}
  updatedAt="2026-02-07"
  tips={tips}
>
  <CompoundInterestCalculator client:load />
</CalculatorLayout>
