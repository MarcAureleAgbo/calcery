---

import CalculatorLayout from '../../layouts/CalculatorLayout.astro';

import BudgetCalculator from '../../components/calculators/BudgetCalculator.tsx';

import type { BreadcrumbItem, FAQItem, RelatedLink } from '../../lib/types.ts';

const breadcrumbs: BreadcrumbItem[] = [

  { name: "Accueil", item: "/" },

  { name: "Calculateurs", item: "/calculateurs" },

  { name: "Budget mensuel", item: "/calculateurs/budget-mensuel" }

];

const faqs: FAQItem[] = [

  { question: "Qu'est-ce qu'un budget mensuel ?", answer: "Un budget mensuel est une estimation de vos revenus et dépenses sur un mois." },

  { question: "Pourquoi calculer son budget ?", answer: "Pour mieux gérer ses finances et éviter les découverts." },

  { question: "Comment réduire ses dépenses ?", answer: "Identifiez les postes coûteux et cherchez des alternatives moins chères." },

  { question: "Qu'est-ce que le taux d'épargne ?", answer: "Le pourcentage de vos revenus que vous épargnez après dépenses." },

  { question: "Puis-je inclure des revenus variables ?", answer: "Oui, utilisez une moyenne mensuelle pour plus de précision." },

  { question: "Que faire si mes dépenses dépassent mes revenus ?", answer: "Réduisez les dépenses non essentielles ou augmentez vos revenus." },

  { question: "Ce calculateur est-il gratuit ?", answer: "Oui, tous nos outils sont gratuits et sans inscription." },

  { question: "Puis-je sauvegarder mes calculs ?", answer: "Pas encore, mais nous travaillons dessus." }

];

const tips: string[] = [

  "Incluez tous vos revenus fixes et variables pour une vision complète.",

  "Listez toutes vos dépenses : essentielles (loyer, nourriture) et loisirs.",

  "Visez un taux d'épargne de 10-20% de vos revenus.",

  "Révisez votre budget chaque mois pour l'ajuster.",

  "Utilisez des applications mobiles pour suivre vos dépenses.",

  "Évitez les achats impulsifs en attendant 24h avant d'acheter."

];

---

<CalculatorLayout title="Calculateur budget mensuel gratuit" description="Calculez facilement votre budget mensuel pour mieux gérer vos finances." breadcrumbs={breadcrumbs} faqs={faqs} updatedAt="2026-01-07" tips={tips}>

  <BudgetCalculator client:load />

</CalculatorLayout>