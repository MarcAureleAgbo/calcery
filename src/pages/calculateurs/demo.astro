---

import CalculatorLayout from '../../layouts/CalculatorLayout.astro';

import Button from '../../components/ui/Button.astro';

import type { BreadcrumbItem, FAQItem, RelatedLink } from '../../lib/types.ts';

const breadcrumbs: BreadcrumbItem[] = [

  { name: "Accueil", item: "/" },

  { name: "Calculateurs", item: "/calculateurs" },

  { name: "Demo", item: "/calculateurs/demo" }

];

const faqs: FAQItem[] = [

  { question: "Comment utiliser ce calculateur ?", answer: "Entrez les valeurs et cliquez sur calculer." },

  { question: "Est-ce gratuit ?", answer: "Oui, tous nos outils sont gratuits." },

  { question: "Puis-je sauvegarder mes calculs ?", answer: "Pas encore, mais bientôt." }

];

const related: RelatedLink[] = [

  { label: "Budget", href: "/budget", description: "Gérez votre budget efficacement." },

  { label: "À propos", href: "/a-propos", description: "En savoir plus sur nous." }

];

---

<CalculatorLayout title="Calculateur Demo - Calcery" description="Un calculateur de démonstration simple." breadcrumbs={breadcrumbs} faqs={faqs} updatedAt="2026-01-07">

  <form class="bg-gray-50 p-4 rounded">

    <label for="a" class="block mb-2">Valeur A :</label>

    <input type="number" id="a" class="border p-2 mb-4 w-full" />

    <label for="b" class="block mb-2">Valeur B :</label>

    <input type="number" id="b" class="border p-2 mb-4 w-full" />

    <Button type="button">Calculer (simulation)</Button>

    <p id="result" class="mt-4">Résultat : 0</p>

  </form>

</CalculatorLayout>