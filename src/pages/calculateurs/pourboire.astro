---

import CalculatorLayout from '../../layouts/CalculatorLayout.astro';

import TipCalculator from '../../components/calculators/TipCalculator.tsx';

import type { BreadcrumbItem, FAQItem, RelatedLink } from '../../lib/types.ts';

const breadcrumbs: BreadcrumbItem[] = [

  { name: "Accueil", item: "/" },

  { name: "Calculateurs", item: "/calculateurs" },

  { name: "Pourboire", item: "/calculateurs/pourboire" }

];

const faqs: FAQItem[] = [

  { question: "Qu'est-ce qu'un pourboire ?", answer: "Un pourboire est une somme donnée en plus du paiement pour récompenser le service." },

  { question: "Le service est-il inclus en France ?", answer: "Souvent oui, mais le pourboire reste apprécié pour un excellent service." },

  { question: "Combien donner en pourboire ?", answer: "Généralement 5 à 10% du montant, selon la satisfaction." },

  { question: "Comment calculer le pourboire par personne ?", answer: "Divisez le total par le nombre de personnes." },

  { question: "Dois-je arrondir le pourboire ?", answer: "Oui, souvent à l'euro supérieur pour simplifier." },

  { question: "Le pourboire est-il obligatoire ?", answer: "Non, il est optionnel mais recommandé." },

  { question: "Puis-je calculer pour un groupe ?", answer: "Oui, entrez le nombre de personnes." },

  { question: "Ce calculateur est-il gratuit ?", answer: "Oui, comme tous nos outils." }

];

const tips: string[] = [

  "Le pourboire standard en France est de 5 à 10% du montant.",

  "Arrondissez le pourboire à l'euro supérieur pour simplifier.",

  "Donnez plus (15%) pour un service vraiment exceptionnel.",

  "Vérifiez si le service est déjà inclus dans l'addition.",

  "Pour les groupes, divisez le total par personne.",

  "Utilisez ce calculateur pour éviter les erreurs de calcul."

];

---

<CalculatorLayout title="Calculateur pourboire gratuit" description="Calculez facilement le pourboire et le total de votre repas." breadcrumbs={breadcrumbs} faqs={faqs} updatedAt="2026-01-07" tips={tips}>

  <TipCalculator client:load />

</CalculatorLayout>