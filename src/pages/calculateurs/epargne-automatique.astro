---

import CalculatorLayout from '../../layouts/CalculatorLayout.astro';

import SavingsGoalCalculator from '../../components/calculators/SavingsGoalCalculator.tsx';

import type { BreadcrumbItem, FAQItem, RelatedLink } from '../../lib/types.ts';

const breadcrumbs: BreadcrumbItem[] = [

  { name: "Accueil", item: "/" },

  { name: "Calculateurs", item: "/calculateurs" },

  { name: "Épargne automatique", item: "/calculateurs/epargne-automatique" }

];

const faqs: FAQItem[] = [

  { question: "Qu'est-ce que l'épargne automatique ?", answer: "C'est un système où vous versez régulièrement une somme pour atteindre un objectif." },

  { question: "Comment calculer mon effort mensuel ?", answer: "Entrez votre objectif, durée et épargne initiale. Le calculateur fait le reste." },

  { question: "Le taux d'intérêt est-il garanti ?", answer: "Non, c'est une estimation basée sur le taux annuel fourni." },

  { question: "Puis-je changer mes versements ?", answer: "Oui, mais ajustez en conséquence pour atteindre votre objectif." },

  { question: "Que faire si je n'atteins pas mon objectif ?", answer: "Augmentez vos versements ou prolongez la durée." },

  { question: "L'épargne est-elle imposable ?", answer: "Cela dépend de votre situation fiscale. Consultez un expert." },

  { question: "Puis-je utiliser ce calculateur sans taux ?", answer: "Oui, laissez le taux à 0 pour un calcul simple." },

  { question: "Est-ce gratuit ?", answer: "Oui, tous nos outils sont gratuits." }

];

const tips: string[] = [

  "Définissez un objectif clair et réaliste (ex: 5000€ en 2 ans).",

  "Automatisez vos versements pour épargner sans y penser.",

  "Commencez avec de petits montants pour créer l'habitude.",

  "Augmentez vos versements quand votre salaire augmente.",

  "Choisissez un compte épargne avec un bon taux d'intérêt.",

  "Suivez vos progrès mensuellement pour rester motivé."

];

---

<CalculatorLayout title="Calculateur épargne automatique gratuit" description="Calculez votre plan d'épargne pour atteindre vos objectifs financiers." breadcrumbs={breadcrumbs} faqs={faqs} updatedAt="2026-01-07" tips={tips}>

  <SavingsGoalCalculator client:load />

</CalculatorLayout>