---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import ToolCard from '../../components/ToolCard.astro';
import FeatureCard from '../../components/FeatureCard.astro';
import StepCard from '../../components/StepCard.astro';
import { SITE_URL } from '../../lib/site';
import { getCalculatorRoute } from '../../lib/calculator-taxonomy';

const baseSiteUrl = SITE_URL;

const webApplicationSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebApplication',
  name: 'Calcery',
  url: `${baseSiteUrl}/en`,
  applicationCategory: 'FinanceApplication',
  operatingSystem: 'All',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'EUR',
  },
  description: 'Simple and free calculators to better manage your daily finances.',
};

const featuredToolsSchema = {
  '@context': 'https://schema.org',
  '@type': 'ItemList',
  name: 'Calcery financial calculators',
  itemListElement: [
    { '@type': 'ListItem', position: 1, url: `${baseSiteUrl}${getCalculatorRoute('en', 'budget-mensuel')}` },
    { '@type': 'ListItem', position: 2, url: `${baseSiteUrl}${getCalculatorRoute('en', 'epargne-automatique')}` },
    { '@type': 'ListItem', position: 3, url: `${baseSiteUrl}${getCalculatorRoute('en', 'pourboire')}` },
    { '@type': 'ListItem', position: 4, url: `${baseSiteUrl}${getCalculatorRoute('en', 'partage-addition')}` },
    { '@type': 'ListItem', position: 5, url: `${baseSiteUrl}${getCalculatorRoute('en', 'economies-petites-depenses')}` },
    { '@type': 'ListItem', position: 6, url: `${baseSiteUrl}${getCalculatorRoute('en', 'interets-composes')}` },
  ],
};

const categoryCards = [
  {
    icon: 'üíº',
    title: 'Finance',
    description: 'Budgeting, savings, tax and investing simulations.',
    href: '/en/finance',
  },
  {
    icon: 'üè•',
    title: 'Health',
    description: 'Category ready for upcoming health-focused calculators.',
    href: '/en/health',
  },
  {
    icon: 'üè†',
    title: 'Real estate',
    description: 'Upcoming simulations for housing budgets and planning.',
    href: '/en/real-estate',
  },
  {
    icon: 'üß≠',
    title: 'Daily life',
    description: 'Tip, split bill and recurring small-expense calculators.',
    href: '/en/daily-life',
  },
  {
    icon: 'üõ†Ô∏è',
    title: 'Home',
    description: 'Future tools for renovation and home project decisions.',
    href: '/en/home',
  },
  {
    icon: 'üéì',
    title: 'Education',
    description: 'Upcoming calculators for study planning and progress tracking.',
    href: '/en/education',
  },
];
---

<BaseLayout
  title="Calcery - Simple calculators to better manage your daily finances"
  description="Simple and free calculators to better manage your daily budget, with no signup and no hassle."
  lang="en"
>
  <script type="application/ld+json" set:html={JSON.stringify(webApplicationSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(featuredToolsSchema)} />

  <Hero lang="en" />

  <section class="section">
    <div class="section-header">
      <div class="section-badge">üóÇÔ∏è Categories</div>
      <h2 class="section-title">Our calculator categories</h2>
      <p class="section-subtitle">
        Browse key topics to quickly access the tools that match your goal.
      </p>
    </div>

    <div class="tools-grid">
      {categoryCards.map((category) => (
        <ToolCard
          icon={category.icon}
          title={category.title}
          description={category.description}
          href={category.href}
          ctaLabel="Explore"
        />
      ))}
    </div>
  </section>

  <section class="section">
    <div class="section-header">
      <div class="section-badge">Top Tools</div>
      <h2 class="section-title">Featured tools</h2>
      <p class="section-subtitle">
        The most popular calculators to handle your finances with clarity
      </p>
    </div>

    <div class="tools-grid">
      <ToolCard
        icon="üí∞"
        title="Monthly budget"
        description="Balance your income and expenses for a clear view of your financial situation."
        href={getCalculatorRoute('en', 'budget-mensuel')}
        ctaLabel="Try"
      />
      <ToolCard
        icon="üìà"
        title="Automatic savings"
        description="Reach your savings goals with a consistent and practical monthly plan."
