---
import CalculatorLayout from '../../../layouts/CalculatorLayout.astro';
import TipCalculator from '../../../components/calculators/TipCalculator.tsx';
import type { BreadcrumbItem, FAQItem } from '../../../lib/types.ts';

const breadcrumbs: BreadcrumbItem[] = [
  { name: 'Home', item: '/en' },
  { name: 'Calculators', item: '/en/calculateurs' },
  { name: 'Tip calculator', item: '/en/calculateurs/pourboire' },
];

const faqs: FAQItem[] = [
  { question: 'What is a tip?', answer: 'A tip is an optional extra payment to reward service quality.' },
  { question: 'How much should I tip?', answer: 'It depends on local customs and service quality, often between 5% and 20%.' },
  { question: 'Can I split the total with friends?', answer: 'Yes, add the number of people to get a per-person amount.' },
  { question: 'Can I enter a custom percentage?', answer: 'Yes, you can choose presets or type your own percentage.' },
  { question: 'Is tipping mandatory?', answer: 'Usually no, but customs differ by country and context.' },
  { question: 'Can I use this tool for groups?', answer: 'Yes, it works for any group size.' },
  { question: 'Is this calculator free?', answer: 'Yes. Calcery tools are free to use.' },
  { question: 'Can I save results?', answer: 'Not yet, but we plan to add this feature.' },
];

const tips: string[] = [
  'Check whether service is already included.',
  'Use a preset for quick calculations.',
  'Round up for faster payment splitting.',
  'Use custom percentage for specific situations.',
  'Always confirm total before paying.',
  'For large groups, verify the final split once more.',
];
---

<CalculatorLayout
  title="Free tip calculator"
  description="Quickly calculate tip amount, total bill and per-person total."
  breadcrumbs={breadcrumbs}
  faqs={faqs}
  updatedAt="2026-02-07"
  tips={tips}
  lang="en"
>
  <TipCalculator client:load lang="en" />
</CalculatorLayout>
