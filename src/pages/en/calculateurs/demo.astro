---
import CalculatorLayout from '../../../layouts/CalculatorLayout.astro';
import Button from '../../../components/ui/Button.astro';
import type { BreadcrumbItem, FAQItem, RelatedLink } from '../../../lib/types.ts';

const breadcrumbs: BreadcrumbItem[] = [
  { name: 'Home', item: '/en' },
  { name: 'Calculators', item: '/en/calculateurs' },
  { name: 'Demo', item: '/en/calculateurs/demo' },
];

const faqs: FAQItem[] = [
  { question: 'How do I use this calculator?', answer: 'Enter values and click calculate.' },
  { question: 'Is it free?', answer: 'Yes, all tools are free.' },
  { question: 'Can I save my calculations?', answer: 'Not yet, but soon.' },
];

const related: RelatedLink[] = [
  { label: 'Budget', href: '/en/calculateurs/budget-mensuel', description: 'Manage your budget efficiently.' },
  { label: 'About', href: '/en/a-propos', description: 'Learn more about us.' },
];
---

<CalculatorLayout title="Demo calculator - Calcery" description="A simple demo calculator." breadcrumbs={breadcrumbs} faqs={faqs} updatedAt="2026-02-07" lang="en">
  <form class="rounded bg-gray-50 p-4">
    <label for="a" class="mb-2 block">Value A:</label>
    <input type="number" id="a" class="mb-4 w-full border p-2" />

    <label for="b" class="mb-2 block">Value B:</label>
    <input type="number" id="b" class="mb-4 w-full border p-2" />

    <Button type="button">Calculate (demo)</Button>

    <p id="result" class="mt-4">Result: 0</p>
  </form>
</CalculatorLayout>
