---
import CalculatorLayout from '../../../layouts/CalculatorLayout.astro';
import IncomeCalculator from '../../../components/calculators/IncomeCalculator.tsx';
import type { BreadcrumbItem, FAQItem } from '../../../lib/types.ts';

const breadcrumbs: BreadcrumbItem[] = [
  { name: 'Home', item: '/en' },
  { name: 'Calculators', item: '/en/calculateurs' },
  { name: 'Income tax', item: '/en/calculateurs/impot-revenu' },
];

const faqs: FAQItem[] = [
  { question: 'How is income tax estimated?', answer: 'This calculator applies a progressive bracket approach to estimate annual tax.' },
  { question: 'What are tax household shares?', answer: 'They represent your household structure and can affect effective taxation.' },
  { question: 'Is this an official tax result?', answer: 'No. This is an estimate for educational and planning purposes.' },
  { question: 'Can I use it for salary negotiation?', answer: 'Yes, it helps compare gross vs estimated net outcomes.' },
  { question: 'Does it include every tax rule?', answer: 'No. Credits, deductions and special cases are simplified.' },
];

const tips = [
  'Review your assumptions before making decisions.',
  'Use conservative estimates for planning.',
  'Track gross-to-net impact over multiple years.',
  'Consult a tax professional for complex situations.',
  'Compare scenarios with different income levels.',
];
---

<CalculatorLayout
  title="Free income tax calculator"
  description="Estimate your income tax and net income in seconds."
  breadcrumbs={breadcrumbs}
  faqs={faqs}
  updatedAt="2026-02-07"
  tips={tips}
  lang="en"
>
  <IncomeCalculator client:load lang="en" />
</CalculatorLayout>
