---

import BaseLayout from '../../layouts/BaseLayout.astro';

import Card from '../../components/ui/Card.astro';

import Container from '../../components/ui/Container.astro';

import { getCollection } from 'astro:content';

const posts = await getCollection('blog');

const sortedPosts = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

---

<BaseLayout title="Blog - Calcery" description="Articles et conseils sur les calculateurs et la gestion budgétaire.">

  <Container>

    <h1>Blog</h1>

    <p>Découvrez nos articles sur la gestion budgétaire et les calculateurs financiers.</p>

    <section class="mb-8">

      <h2 class="text-2xl font-semibold mb-4">Articles</h2>

      <div class="space-y-4">

        {sortedPosts.map(post => (

          <div class="border-b pb-4">

            <h3><a href={`/blog/${post.slug}`} class="text-primary hover:underline text-xl">{post.data.title}</a></h3>

            <p class="text-gray-600">{post.data.description}</p>

            <p class="text-sm text-gray-500">{new Date(post.data.date).toLocaleDateString('fr-FR')}</p>

          </div>

        ))}

      </div>

    </section>

    <section>

      <h2 class="text-2xl font-semibold mb-4">Articles recommandés</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        {sortedPosts.slice(0, 2).map(post => (

          <Card>

            <h3><a href={`/blog/${post.slug}`} class="text-primary hover:underline">{post.data.title}</a></h3>

            <p>{post.data.description}</p>

          </Card>

        ))}

      </div>

    </section>

  </Container>

</BaseLayout>