      <Container class="py-6">
        <Breadcrumbs items={breadcrumbs} />

        <!-- HEADER PREMIUM -->
        <div class="text-center mb-8">
          <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-4 leading-tight">{title}</h1>
          <p class="text-xl text-gray-600 font-light mb-8 max-w-2xl mx-auto">{description}</p>
          <div class="flex flex-wrap justify-center gap-3 mb-6">
            <span class="bg-primary/10 text-primary px-4 py-2 rounded-full text-sm font-medium">Gratuit</span>
            <span class="bg-secondary/10 text-secondary px-4 py-2 rounded-full text-sm font-medium">Sans inscription</span>
            <span class="bg-accent/10 text-accent px-4 py-2 rounded-full text-sm font-medium">Calcul local</span>
          </div>
