        <div class="bg-white border border-gray-200 rounded-xl p-8 shadow-md">
          <h2 class="text-2xl font-bold mb-8 text-center text-gray-900">Calculateur</h2>
          <slot />
        </div>
      </div>

      <!-- CONSEILS RAPIDES -->
